{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/src/**/*.test.ts",
    "**/src/**/*.spec.ts",
    "**/src/**/*.mock.ts"
  ]
}
